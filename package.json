{
  "name": "native-browser",
  "version": "1.0.0",
  "description": "A native-feeling Windows browser application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "keywords": [
    "browser",
    "electron",
    "windows"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.nativebrowser.app",
    "productName": "Native Browser",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!dist/*",
      "!.git/*"
    ]
  }
}